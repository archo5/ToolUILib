"table_base:style":
{
	width = "100%"
	padding = 5
	backgroundPainter = "insetbox"
}
"table_cell:style":
{
	paddingV = 1
	paddingH = 2
	backgroundPainter = "table_cell"
}
"table_row_header:style":
{
	paddingV = 1
	paddingH = 2
	backgroundPainter = "table_header"
}
"table_col_header:style":
{
	paddingV = 1
	paddingH = 2
	backgroundPainter = "table_header"
}

"table_cell:painter":
{
	__ = "select_first",
	painters:
	[
		{ condition = ["checked"], painter = { __ = "color_fill",
			borderWidth = 1, color = "f:0.45;0.05;0", borderColor = "f:0.45;0.1;0" } }
		{ condition = ["hover"], painter = { __ = "color_fill",
			borderWidth = 1, color = "f:0.25;0.05;0", borderColor = "f:0.25;0.1;0.05" } }
		{ painter = { __ = "color_fill",
			borderWidth = 1, color = "f:0.05", borderColor = "f:0.15" } }
	]
}
"table_header:painter":
{
	__ = "color_fill"
	color = "f:0.1;1"
	borderColor = "f:0.2;1"
	borderWidth = 1
}
